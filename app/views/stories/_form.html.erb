<%= form_for @story do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "50x3" %>
  </div>
  <div>
    Tasks
		<br />
		<% for task in @story.tasks %>
			<div class="task_field">
				<%= text_area "tasks", nil, :size => "50x2", :value => task.description %>
				<%= hidden_field_tag "story[task_ids][]", task.id %>
				<%= link_to_function "Remove task", "remove_task(this)"%>
			</div>	
		<% end %>
	</div>
	<p>
		<%= link_to_function "Add new task", "add_task(this, \"#{escape_javascript(create_empty_task_element)}\")"%>
	</p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
