<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "50x3" %>
  </div>
  <div>
    Tasks
		<br />
		<% for task in @story.tasks %>
			<%= text_area "task", nil, :size => "50x2", :value => task.description %>
			<br />
		<% end %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
